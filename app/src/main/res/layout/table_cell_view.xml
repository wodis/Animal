<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cell_height"
    android:background="@color/color6"
    android:paddingLeft="@dimen/default_padding_normal"
    android:paddingRight="@dimen/default_padding_normal">

    <ImageView
        android:id="@+id/right_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/icon_arrow"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:lines="1"
        android:text=""
        android:textColor="@color/color2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/desc_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_padding_normal"
        android:layout_marginStart="@dimen/default_padding_normal"
        android:layout_toEndOf="@id/title_tv"
        android:layout_toLeftOf="@id/right_iv"
        android:layout_toRightOf="@id/title_tv"
        android:layout_toStartOf="@id/right_iv"
        android:gravity="center_vertical|end"
        android:lines="1"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color1"
        android:textColorHint="@color/color3"
        android:textSize="16sp"
        android:visibility="gone" />

    <com.openwudi.animal.view.ClearEditText
        android:id="@+id/input_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_padding_normal"
        android:layout_marginStart="@dimen/default_padding_normal"
        android:layout_toEndOf="@id/title_tv"
        android:layout_toLeftOf="@id/right_iv"
        android:layout_toRightOf="@id/title_tv"
        android:layout_toStartOf="@id/right_iv"
        android:background="@null"
        android:gravity="center_vertical|end"
        android:lines="1"
        android:padding="2dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color1"
        android:textColorHint="@color/color3"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16sp"
        android:visibility="gone" />
</RelativeLayout>